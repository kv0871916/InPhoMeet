<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/paper">

    </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_account"
            android:textSize="20sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="@string/kindly_enter_your_details"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp">

        </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/full_name"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp">

            </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:background="@null"
            android:id="@+id/inputFname"
            android:hint="@string/alex"
            android:layout_height="30dp"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:textStyle="bold">

        </EditText>
        <ProgressBar
            android:id="@+id/pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:progress="100"
            android:progressDrawable="@color/colorDivider"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp">

            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:background="@null"
                android:id="@+id/inputMobile"
                android:hint="@string/_12345_67890"
                android:layout_height="30dp"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold">

            </EditText>
            <ProgressBar
                android:id="@+id/pro1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progress="100"
                android:progressDrawable="@color/colorDivider"
                />
        </LinearLayout>
    </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="@string/email"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp">

                </TextView>
                <EditText
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:id="@+id/inputnewEmail"
                    android:hint="@string/any_eg_in"
                    android:layout_height="30dp"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </EditText>
                <ProgressBar

                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:progress="100"
                    android:progressDrawable="@color/colorDivider"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="@string/password"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp">

                </TextView>
                <EditText
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:id="@+id/inputnewPassword"
                    android:hint="Min:6 Max:8"
                    android:layout_height="30dp"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </EditText>
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:progress="100"
                    android:progressDrawable="@color/colorDivider"
                    />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/background_button"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/done"
                android:id="@+id/buttonFLName"
                android:textColor="@color/colorWhite">
            </Button>
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:visibility="gone">
            </ProgressBar>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:id="@+id/loginhere"
            android:text="@string/already_have_an_account_login_here"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp">

        </TextView>
</LinearLayout>
</ScrollView>