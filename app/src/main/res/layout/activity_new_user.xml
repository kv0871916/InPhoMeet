<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".NewUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/paper">

        </ImageView>
        <TextView
            android:fontFamily="@font/autour_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_account"
            android:textSize="22sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="@string/kindly_enter_your_details"
            android:textColor="@color/colorTextSecondary"
            android:fontFamily="@font/autour_one"
            android:textSize="14sp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/inputFname"
                android:hint="@string/full_name"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:fontFamily="@font/autour_one"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableTint="@color/colorTextPrimary"
                android:drawableLeft="@drawable/ic_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:drawableStart="@drawable/ic_username"
                tools:targetApi="m"
                app:boxStrokeColor="@color/colorTextPrimary"
                app:boxStrokeWidthFocused="2dp"
                android:drawablePadding="10dp"
                app:endIconMode="clear_text">

            </com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/inputMobile"
                android:hint="@string/enter_number"
                android:fontFamily="@font/autour_one"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableTint="@color/colorTextPrimary"
                android:drawableLeft="@drawable/ic_contacts"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:drawableStart="@drawable/ic_contacts"
                tools:targetApi="m"
                app:boxStrokeColor="@color/colorTextPrimary"
                app:boxStrokeWidthFocused="2dp"
                android:drawablePadding="10dp"
                app:endIconMode="clear_text">

            </com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/inputnewUsername"
                android:hint="@string/enterusername"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/autour_one"
                android:drawableTint="@color/colorTextPrimary"
                android:drawableLeft="@drawable/ic_white_account_circle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:drawableStart="@drawable/ic_white_account_circle"
                tools:targetApi="m"
                app:boxStrokeColor="@color/colorTextPrimary"
                app:boxStrokeWidthFocused="2dp"
                android:drawablePadding="10dp"
                app:endIconMode="clear_text">

            </com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/inputnewPassword"
                android:hint="@string/prompt_password"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/autour_one"
                android:drawableTint="@color/colorTextPrimary"
                android:drawableLeft="@drawable/ic_password_lock"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:drawableStart="@drawable/ic_password_lock"
                tools:targetApi="m"
                app:boxStrokeColor="@color/colorTextPrimary"
                app:boxStrokeWidthFocused="2dp"
                android:drawablePadding="10dp"
                app:endIconMode="password_toggle">

            </com.google.android.material.textfield.TextInputEditText>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="120dp"
                    android:fontFamily="@font/autour_one"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="@string/male"
                    android:textSize="16sp"
                    />
                <RadioButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/female"
                    android:text="@string/female"
                    android:textSize="16sp"
                    android:fontFamily="@font/autour_one"
                    />
                <RadioButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/other"
                    android:fontFamily="@font/autour_one"
                    android:text="@string/other_s"
                    android:textSize="16sp"
                    />
            </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode2"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode3"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode4"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode5"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode6"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/autour_one"
                android:text="@string/didn_t_receive_the_otp"
                android:textSize="14sp">
            </TextView>
            <TextView
                android:fontFamily="@font/autour_one"
                android:id="@+id/textresendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp">
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/autour_one"
                android:layout_margin="10dp"
                android:background="@drawable/background_button"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/done"
                android:id="@+id/buttonFLName"
                android:textColor="@color/colorWhite">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/background_button"
                android:textStyle="bold"
                android:textSize="16sp"
                android:visibility="gone"
                android:text="@string/verify"
                android:fontFamily="@font/autour_one"
                android:id="@+id/buttonOTPVerify"
                android:textColor="@color/colorWhite">
            </Button>
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:visibility="gone">
            </ProgressBar>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:fontFamily="@font/autour_one"
            android:id="@+id/loginhere"
            android:text="@string/already_have_an_account_login_here"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp">
        </TextView>

</LinearLayout>
</ScrollView>